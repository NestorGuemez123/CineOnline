@model IEnumerable<VideoOnDemand.Web.Models.SerieViewModel>

    @{
        ViewBag.Title = "Series";
    }

    <h2>Administrar Series</h2>

    <p>
        @Html.ActionLink("Crear nueva serie", "Create")
    </p>
    <table class="table table-hover table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLanzamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadosMedia)
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLanzamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadosMedia)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.MediaId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.MediaId }) |
                @Html.ActionLink("Episodios", "Index", "ManageEpisodio", new { id = item.MediaId }, new { })
            </td>
        </tr>
        }

    </table>
