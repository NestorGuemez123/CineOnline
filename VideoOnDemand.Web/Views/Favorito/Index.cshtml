@model List<VideoOnDemand.Web.Models.FavoritoViewModel>

@{
    ViewBag.Title = "Mi Lista";
}
@{
}
<h2>Mi Lista</h2>
<h5>@Model.Count Elementos en la lista</h5>
<style>
    .tooltip.top .tooltip-inner {
        background-color: red;
    }

    .tooltip.top .tooltip-arrow {
        border-top-color: red;
    }
</style>
<div class="row">
    @foreach (var serie in Model)
    {
            <div class="col-md-4" style="padding:2px">
                <a href='@Url.Action("Details", "MovieCatalogo", new { id = serie.mediaId})'>
                    <img src="/Multimedia/r_cars3_header_poststreet_d2c05b66.jpeg" class="TitulosBonitos" style="width:100%;" data-toggle="tooltip" data-placement="top" title="@serie.media.Nombre">
                </a>
            </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $(".TitulosBonitos").tooltip();
        });
    </script>
}