<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.Page > 1)
        {
            <li>

                <a href="@Url.Action(ViewBag.Action as string,new { page = Model.Page - 1, busqueda = (string) ViewBag.Busqueda, genero = (string) ViewBag.Genero, pageSize = Model.PageSize })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <a href="" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (var index = 1; index <= Model.TotalPages; index++)
        {
            if (Model.Page == index)
            {
                <li class="active">@Html.ActionLink((index).ToString(), ViewBag.Action as string, new { page = index, busqueda = (string)ViewBag.Busqueda, genero = (string)ViewBag.Genero, pageSize = Model.PageSize })</li>
            }
            else
            {
                <li>@Html.ActionLink((index).ToString(), ViewBag.Action as string, new { page = index, busqueda = (string)ViewBag.Busqueda, genero = (string)ViewBag.Genero, pageSize = Model.PageSize })</li>
            }

        }
        @if (Model.Page < Model.TotalPages)
        {
            <li>
                <a href="@Url.Action(ViewBag.Action as string,new { page = Model.Page + 1, busqueda = (string) ViewBag.Busqueda, genero = (string) ViewBag.Genero, pageSize = Model.PageSize })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <a href="" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>

